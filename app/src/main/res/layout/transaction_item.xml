<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="Transact"
            type="com.recoded.taqadam.models.Transaction" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/margin8dp"
            android:src="@{Transact.transactionAmount>=0?@drawable/ic_wallet_c : @drawable/ic_wallet_d}" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{Transact.transactionAmount>=0?@string/deposit:@string/withdrawal}"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{Transact.transactionDescription}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{Transact.transactionAmountFriendly}"
                android:textColor="@{Transact.transactionAmount>=0?@color/colorPwStrong:@color/colorPwWeak}"
                android:textSize="18sp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{Transact.transactionTimeString}"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end" />
        </LinearLayout>

    </LinearLayout>
</layout>