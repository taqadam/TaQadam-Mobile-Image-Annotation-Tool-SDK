<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:background="#fff">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.ahmadsaifaddin3ma.taqadam2.MainActivity">


        <TextView
            android:id="@+id/sign_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:text="Sign in"
            android:textColor="#5D133B"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/logo"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/usre-name_input_layout"
            android.support.design:hintTextAppearance="@color/purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#5D133B">

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="26dp"
                android:backgroundTint="@color/purple"
                android:drawableLeft="@drawable/ic_user"
                android:gravity="top"
                android:hint="  User Name
"
                android:textColor="#5D133B"
                android:textColorHint="#5D133B"
                android:textSize="20sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_input_layout1"
            android.support.design:hintTextAppearance="@color/purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#5D133B">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="26dp"
                android:backgroundTint="@color/purple"
                android:drawableLeft="@drawable/ic_key"
                android:gravity="top"
                android:hint="  Password"
                android:textColor="#5D133B"
                android:textColorHint="#5D133B"
                android:textSize="20sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.CardView
            android.support.design:cardCornerRadius="12dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple"
                android:text="Sign In"
                android:textColor="#fff"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="Already have an account?"
                android:textColor="@color/purple"/>

            <Button
                android:id="@+id/sign_up_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:text="Sign Up"
                android:textColor="#000"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>