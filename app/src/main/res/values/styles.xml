    <attr name="editProfileIcon" format="reference"/>
    <attr name="planeBackground" format="reference"/>

    <style name="button_toolbox" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_gravity">center</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:antialias">false</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/colorMaroon</item>
    </style>

    <style name="signup_form_fields" parent="Base.Widget.AppCompat.EditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:textColorHint">@color/colorPurple</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="signup_form_hint_appearance" parent="TextAppearance.Design.Hint">
        <!--<item name="android:textColor">?attr/SigninActivitytextColor</item>-->
    </style>

    <style name="AppTheme.ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">?attr/colorErrorText</item>
    </style>

    <style name="AppTheme.IntroDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.ProfileLineText" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="AppTheme.ProfileDetailsText" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">162dp</item>
        <item name="android:layout_marginStart">162dp</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:buttonTint" tools:ignore="NewApi">@color/colorWhite</item>
    </style>

    <style name="edit_text_feedback">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">top|start</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="button_feedback">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:drawableLeft">@drawable/ic_right</item>
        <item name="android:drawableStart">@drawable/ic_right</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="about_us_design_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
